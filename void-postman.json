{
  "info": {
    "_postman_id": "void-api-collection",
    "name": "VOID API",
    "description": "Collection for testing the VOID Store Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"token\", jsonData.token);",
                  "console.log(\"Token automatically set to:\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@void.com\",\n    \"password\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BASE_URL}}/api/users/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"New Customer\",\n    \"email\": \"testuser@void.com\",\n    \"password\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BASE_URL}}/api/users",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/products",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "products"]
            }
          },
          "response": []
        },
        {
          "name": "Get Single Product",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/products/:id",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "REPLACE_WITH_PRODUCT_ID",
                  "description": "Paste a product ID from the 'Get All' list here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/products",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "products"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Product (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/products/:id",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "REPLACE_WITH_ID_TO_DELETE"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order (Guest/User)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderItems\": [\n    {\n      \"product\": \"REPLACE_WITH_REAL_PRODUCT_ID\", \n      \"name\": \"VOID Signature Hoodie\",\n      \"image\": \"/images/hoodie.jpg\",\n      \"price\": 1200,\n      \"quantity\": 1,\n      \"selectedColor\": \"Black\",\n      \"selectedSize\": \"L\"\n    }\n  ],\n  \"shippingAddress\": {\n    \"fullName\": \"Ahmed Ali\",\n    \"email\": \"ahmed@example.com\",\n    \"phone\": \"01000000000\",\n    \"address\": \"123 Nile St\",\n    \"city\": \"Cairo\",\n    \"governorate\": \"Cairo\"\n  },\n  \"paymentMethod\": \"COD\",\n  \"itemsPrice\": 1200,\n  \"shippingPrice\": 50,\n  \"totalPrice\": 1250\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BASE_URL}}/api/orders",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders"]
            }
          },
          "response": []
        },
        {
          "name": "Get My Orders",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/orders/myorders",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders", "myorders"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Orders (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/orders",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders"]
            }
          },
          "response": []
        },
        {
          "name": "Mark Paid (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/orders/:id/pay",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders", ":id", "pay"],
              "variable": [
                {
                  "key": "id",
                  "value": "ORDER_ID_HERE"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
